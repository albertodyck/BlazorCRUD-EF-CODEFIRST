@page "/AgregarProducto"
@page "/AgregarProducto/{productoId:int}"

@inject IProductoService ProductoService
@inject ICotizacionService CotizacionService

@inject NavigationManager NavigationManager

<h1 class="text-primary">Agregar Producto</h1>

<EditForm Model="@producto">
    <table class="table">
        <tr>
            <td>Cantidad</td>
            <td><input class="form-control col-sm-4" type="text" @bind="producto.Cantidad" /></td>
        </tr>
        <tr>
            <td>Descripción</td>
            <td><input class="form-control col-sm-4" type="text" @bind="producto.Descripcion" /></td>
        </tr>
        <tr>
            <td>SKU</td>
            <td><input class="form-control col-sm-4" type="text" @bind="producto.SKU" /></td>
        </tr>
        <tr>
            <td>Precio Unitario</td>
            <td><input class="form-control col-sm-4" type="text" @bind="producto.PrecioUnitario" /></td>
        </tr>
        <tr>
            <td>SubTotal</td>
            <td><input class="form-control col-sm-4" type="text" @bind=subtotal /></td>
        </tr>
        <tr>
            <td colspan="2" style="text-align:center">
                <input type="submit" value="Save" class="btn btn-outline-success" @onclick="SaveProducto" />
                <input type="button" value="Cancel" class="btn btn-info" @onclick="Cancel" />
            </td>
        </tr>
    </table>
</EditForm>


@code {

    private Producto producto = new Producto();

    public string Message { get; set; }

    [Parameter]
    public decimal subtotal { get; set; }

    [Parameter]
    public int productoId { get; set; }

    protected void Calcular()
    {
        decimal cantidad = producto.Cantidad;
        decimal precioUnitario = producto.PrecioUnitario;
        subtotal = cantidad * precioUnitario;

    }

    protected async Task SaveProducto()
    {
        await ProductoService.SaveProducto(producto);
        NavigationManager.NavigateTo("/");
    }

    protected void Cancel()
    {
        NavigationManager.NavigateTo("/");
    }

}
